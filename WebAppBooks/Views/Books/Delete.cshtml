@model WebAppBooks.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.Isbn</dd>

        <dt class="col-sm-2">Publication Date</dt>
        <dd class="col-sm-10">@Model.PublicationDate?.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
